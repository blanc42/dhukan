{
    "functions": {
      "api/index.go": {
        "includeFiles": "**/*"
      }
    },
    "build": {
      "env": {
        "GO_BUILD_FLAGS": "-ldflags '-s -w'"
      },
      "command": "go get -u github.com/blanc42/ecms@latest && go mod tidy && go build"
    },
    "rewrites": [
      {
        "source": "/:path(api/.*)",
        "destination": "/api"
      }
    ]
  }